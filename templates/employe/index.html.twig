{% extends 'base.html.twig' %}

{% block title %}Listes des employes{% endblock %}

{% block body %}

    <h1>Liste des employes</h1>

    <a href="{{ path(('new_employe')) }}" class="btn btn-success">Ajouter un employ√©</a> <br>

    {% for employe in employes %}
    <a class="btn btn-danger" href="{{ path('delete_employe', {'id' : employe.id}) }}">Supprimer</a>
    <a class="btn btn-warning" href="{{ path('edit_employe', {'id' : employe.id}) }}">Edit</a>
    <a href="{{ path('show_employe', {'id':employe.id} )}}">{{ employe }}</a> ({{employe.entreprise.raisonSociale }}) <br>
    
{% endfor %}

{% endblock %}
