{% extends 'base.html.twig' %}

{% block title %}Listes des entreprises{% endblock %}

{% block body %}

    <h1>Liste des entreprises</h1>

    <a href="{{ path(('new_entreprise')) }}" class="btn btn-success">Ajouter une entreprise</a> <br>

    {% for entreprise in entreprises %}
    <a class="btn btn-danger" href="{{ path('delete_entreprise', {'id' : entreprise.id}) }}">Supprimer</a>
    <a class="btn btn-warning" href="{{ path('edit_entreprise', {'id' : entreprise.id} )}}">Edit</a>
        <a href="{{ path('show_entreprise', {'id' : entreprise.id} )}}"> {{ entreprise }}</a> <br>
        

{% endfor %}

{% endblock %}
